.container > * {
    flex: 1;
    width: auto;
    float: none;
}

.container > *:first-child {
    flex: none;
    border-right: 1px solid black;
    margin-right: 20px;
}

.container > *:last-child {
    margin-right: 30px;
}

.container > *:first-child > ul {
    padding: 10px 20px 0;
    margin-top: 0;
}

