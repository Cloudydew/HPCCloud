    "html-loader": "0.4.0"
  },
  "scripts": {
    "build": "webpack --progress --colors",
    "build:debug": "webpack --display-modules",
    "build:release": "webpack -p --progress --colors",

    "start": "webpack-dev-server --content-base ./dist/ --hot --progress --colors ",
    "open": "open http://localhost:8080/webpack-dev-server/#/",

    "test": "./bin/run-dev.js",

    "commit": "git cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "bin": {
    "HPCCloud": "./bin/hpc-cloud-cli.js"
  },
  "preferGlobal": true,
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
