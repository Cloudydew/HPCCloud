    "json-loader": "0.5.4",
    "style-loader": "0.13.0",
    "url-loader": "0.5.7",
    "eslint-loader": "1.1.1",
    "webpack": "1.12.9",
    
    "eslint": "1.10.3",
    "eslint-plugin-babel": "3.0.0",
    "eslint-plugin-react": "3.11.3",
    "babel-eslint": "4.1.6",

    "babel-core": "6.3.26",
    "babel-loader": "6.2.0",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    
    "tonic-io": "1.1.4",
    "tonic-ui": "1.2.10",

    "font-awesome": "4.5.0",
