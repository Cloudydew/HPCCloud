{
    "objectId": {
        "type": "string",
        "pattern": "^[a-f\\d]{24}$"
    },
    "arrayOfIds": {
        "type": "array",
        "items": {
            "$ref": "#/objectId"
        }
    },
    "step": {
        "type": "object",
        "required": ["type"],
        "additionalProperties": false,
        "properties": {
            "type": {
                "enum": ["input", "output", "information"]
            },
            "status": {
                "enum": ["created", "complete"]
            },
            "folderId": {
            },
            "metadata": {
                "type": "object"
            },
            "export": {
                "type": "array",
                "item": {
                    "$ref": "#/objectId"
                }
            }
        }
    },
    "stepUpdate": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "status": {
                "enum": ["created", "complete"]
            },
            "metadata": {
                "type": "object"
            },
            "export": {
                "type": "array",
                "item": {
                    "$ref": "#/objectId"
                }
            }
        }
    }
}
