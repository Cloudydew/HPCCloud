.hydra-mesh-viewer-container
    position relative
    width 100vw
    height calc(100vh - 64px)

.dialog
    border-radius 4px
    width 50%
    margin 50px auto 0
    box-shadow 0 7px 8px -4px rgba(0,0,0,.2),0 13px 19px 2px rgba(0,0,0,.14),0 5px 24px 4px rgba(0,0,0,.12)

    dl
        margin-bottom 0

    dt
        border-radius 4px 4px 0 0
        width 100%
        padding 12px 20px
        font-size 20px
        letter-spacing .005em
        background-color rgba(204,204,204,.8)

    dd
        display flex
        align-items center
        justify-content center
        height 80px
        font-size 16px

        span
            margin-left 5px