valid-color    = #263238 //biscally black
error-color    = #F44336 //red
complete-color = #2196F3 //blue
material-blue  = #106CC8
light-material-blue = #5bacef
running-color  = #4CAF50 //green

.simput-welcome
    display none

.save-data-model
    display none

.md-subheader.cmb-subheader
    background #cccc
    color #000
    margin 0

md-toast
    position fixed

md-toolbar
    min-height 32px

    .gray
        background-color grey

    .md-toolbar-tools
        padding 5px 0 5px 5px
        height 32px
        min-height 32px
        max-height 32px

    .search-query
        border-radius 10px
        font-size 18px
        padding 0 20px
        border 0


    &.cmb-subheader
        background #ccc
        color #000

        .breadcrumb
            padding 0 15px
            margin 0

            li > span:hover
                color material-blue

    &.cmb-header
        background #0a0a0a
        color #fff

    &.cmb-subsubheader
        background #eee
        color #000

        .md-button
            margin 0 1px
            padding 2px 10px

            i
                color #000

        [toggle-filter-bar]
            font-size 65%

            .md-button
                margin 0 2px
                padding 2px 5px

.faux-toolbar
    @extend md-toolbar
    font-size 1.2em
    padding-bottom 2px
    border-bottom 1px solid lightgrey

md-list-item:nth-child(2n)
    background-color #eeeeee

.cmb-button.md-button.md-fab
    width 28px
    height 28px
    color black
    background-color #eeeeee

    .fa
        top -2px
        position relative
        font-size 20px

    &:hover:enabled
        color white
        background-color error-color

.md-button.project-button
    line-height 1
    min-height auto
    height auto

[ng-click], [ui-sref]
    cursor pointer

input[type="file"]
    height 100%

strong[title]
    font-size 1.5em


.width-100
    width 100%

    input
        width 100%

.width-90
    width 90%

    input
        width 90%

.text-center
    text-align center


md-tabs.cmb-subheader
    section.md-header
        background #eee
        color #0a0a0a

    md-tabs-ink-bar
        background #000
        color #000

    md-tab-label
        color #000

.md-button.md-fab.help-button
    height 20px
    width 20px
    padding 0
    margin 0

button.md-button.md-fab.help-button
    background #ccc

button.md-button.md-fab.help-button.md-default-theme:hover
    background #aaa

.md-button.md-fab.help-button
    height 25px
    width 25px
    padding 0
    margin 0
    background-color #aaa

        .fa
            top -2px
            position relative
            font-size 20px


.cmb-property-panel label
    color rgba(0,0,0,0.26)

.cmb-property-head-group
   margin-top 20px
   position relative
   left -5px

md-sidenav
    .active
        font-weight bold

top-nav-hover()
    &:hover
        text-decoration underline
        color light-material-blue

.cmb-home
    top-nav-hover()

.cmb-username
    padding-right 7px
    top-nav-hover()

.no-padding
    padding 0

.project-filter-button
    padding 0
    width 30px
    min-width 0
    min-height 0
    height 26px
    line-height normal

.project-filter-button > i
    color gray !important //angular-material stylesheets hog this

.project-filter-button.md-raised > i
    color black !important

@media screen and (max-width 900px)
    .info-buttons button, .info-buttons a
        min-width 50px
        max-width none

@media screen and (max-width 600px)
    .info-buttons button, .info-buttons a
        min-width 40px

@media screen and (max-width 490px)
    .info-buttons button, .info-buttons a
        min-width 20px

accordion
    width 100%
    min-height 15px
    .panel-group
        margin-bottom 0

.panel-group .panel
    border-radius 0

.panel-group .panel+.panel
    margin-top 2px

a.accordion-toggle
    width 100%
    display flex
    align-items baseline
    outline none

    &:hover, &:focus
        text-decoration none

    span
        margin-left 16px

.project-accordion-header
    display flex
    justify-content space-between
    align-items center
    width 100%
    > div
        text-align left
    > div:nth-child(2)
        width 20%
        padding-left 8px
    > div:nth-child(3)
        width 60%
    > div:last-child()
        width 20%
        text-align right

.task-log
    max-height 250px
    overflow scroll

input:invalid
    border-bottom 2px solid error-color
    padding 2px 0

.ssh-key
    padding 2px

    label
        padding 2px
        font-size 0.75em
        color rgba(0,0,0,0.54)

.half-width-card
    width 50%

@media screen and (max-width: 600px)
    .half-width-card
        width 100%

.valid, .incomplete
    color valid-color

.error
    color error-color

.complete
    color complete-color

.running
    color running-color

